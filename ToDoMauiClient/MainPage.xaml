<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoMauiClient.MainPage"
             Title="My To Dos With Love">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add To Do" Clicked="OnAddToDoClicked"/>
    </ContentPage.ToolbarItems>
    <CollectionView x:Name="collectionView" SelectionMode="Single" SelectionChanged="OnSelectionChanged"
                    Margin="30">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding ToDoName}" FontSize="Medium"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
